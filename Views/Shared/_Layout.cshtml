@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewData["Title"] - Balimoon_E_Procurement</title>
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/lib/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/Adminlte/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/lib/Adminlte/plugins/datatables/CustomDataTable.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/Chosen/chosen.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <!--<link rel="stylesheet" href="//cdn.datatables.net/responsive/2.2.3/css/dataTables.responsive.css" />-->
    <!--<link rel="stylesheet" href="~/lib/Adminlte/plugins/datatables/dataTables.bootstrap4.min.css" asp-append-version="true" />-->

    @RenderSection("Styles", required: false)
</head>
<body>

    <!--Header-->
    <!--Default Class Fixed-Header Fixed-Sidebar-->
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="app-container app-theme-white body-tabs-shadow fixed-header fixed-sidebar fixed-footer">
            <div class="app-header header-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>

                <div class="app-header__content">
                    <div class="app-header-left">
                        <ul class="header-menu nav">
                            <!--Untuk Header Menu-->
                            <!--Akhir Header Menu-->

                        </ul>
                    </div>
                    <!--Header Right-->
                    <div class="app-header-right">
                        <ul class="header-menu nav">
                            @if (SignInManager.IsSignedIn(User))
                            {

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><h5>Hello @User.Identity.Name!</h5></a>
                                </li>

                                <li class="nav-item">

                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="nav-link btn btn-link mobile-toggle-nav">
                                            <h5>Logout</h5>
                                        </button>
                                    </form>

                                </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register"><h5>Register</h5></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login"><h5>Login</h5></a>
                                </li>
                            }
                        </ul>
                    </div>
                    <!--AkhirHeader Right-->
                </div>
            </div>
            
            <!--Akhir Header-->
            <!-- Main Body-->
            <div class="app-main">
                <!--Awal dari Sidebar-->
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="app-sidebar sidebar-shadow">
                        <div class="app-header__logo">
                            <div class="logo-src"></div>
                            <div class="header__pane ml-auto">
                                <div>
                                    <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                        <span class="hamburger-box">
                                            <span class="hamburger-inner"></span>
                                        </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="app-header__mobile-menu">
                            <div>
                                <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                                    <span class="hamburger-box">
                                        <span class="hamburger-inner"></span>
                                    </span>
                                </button>
                            </div>
                        </div>

                        <div class="app-header__menu">
                            <span>
                                <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                                    <span class="btn-icon-wrapper">
                                        <i class="fa fa-ellipsis-v fa-w-6"></i>
                                    </span>
                                </button>
                            </span>
                        </div>
                        <!--Role Base Access Control-->
                        <div class="scrollbar-sidebar">
                            <div class="app-sidebar__inner">
                                <ul class="vertical-nav-menu">
                                    <hr />
                                    <li class="app-sidebar__heading h3">@User.Identity.Name</li>
                                    <li class="app-sidebar__heading" style="color:black"><span class="fas fa-circle" style="color:#169908"></span> online</li>
                                    <hr />
                                    <li class="app-sidebar__heading">Balimoon Dashboards</li>
                                    <li>
                                        <a href="/Home/Index">
                                            <i class="metismenu-icon pe-7s-home"></i>
                                            Index
                                        </a>
                                    </li>
                                    @Html.Raw(HttpContextAccessor.HttpContext.Session.GetString("menuString"))
                                </ul>
                            </div>
                        </div>
                        <!--Akhir Role Base Access Control-->
                    </div>
                 }
                 else
                 {

                 }
                 <!--Akhir SideBar-->
                 <!--Awal Main Body-->
                 <div class="app-main__outer">
                    <div class="col-xl-12">
                        @RenderBody()
                    </div>

                    <!-- Awal Footer-->
                    <div class="app-wrapper-footer">
                        <div class="app-footer">
                            <div class="app-footer__inner">
                                <div class="app-footer-left">
                                    <div>
                                        &copy; 2020 Architect UI Template
                                    </div>
                                </div>
                                <div class="app-footer-right">
                                    <b>&copy; 2020 BalimOOn Liqueurs</b>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Akhir Footer-->
                 </div>
            </div>
        </div>
     }
     else
     {
        <div class="app-container  body-tabs-shadow fixed-header">
            <div class="app-header header-shadow" data-class="">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar ">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>

                <div class="app-header__content">
                    <div class="app-header-left">
                        <ul class="header-menu nav">
                            <!--Untuk Header Menu-->
                            <!--Akhir Header Menu-->

                        </ul>
                    </div>
                    <!--Header Right-->
                    <div class="app-header-right ">
                        <ul class="header-menu nav">

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register"><h5>Register</h5></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login"><h5>Login</h5></a>
                            </li>

                        </ul>
                    </div>
                    <!--AkhirHeader Right-->
                </div>
            </div>
            
            <!--Akhir Header-->
            <!-- Main Body-->
            <div class="app-main">
                <!--Awal Main Body-->
                <div class="app-main__outer">
                    <div class="col-xl-12">
                        <div>
                            @RenderBody()
                        </div>
                    </div>


                    <!-- Awal Footer-->
                    <div class="app-wrapper-footer">
                        <div class="app-footer">
                            <div class="app-footer__inner">
                                <div class="app-footer-left">
                                    <div>
                                        &copy; 2020 Architect UI Template
                                    </div>
                                </div>
                                <div class="app-footer-right">
                                    <b>&copy; 2020 BalimOOn Liqueurs</b>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Akhir Footer-->

                </div>
            </div>
        </div>

    }
    <!--Akhir Main Body-->
    <!--Untuk Java Script-->
    <script type="text/javascript" src="~/lib/Adminlte/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/jquery-validate.min.js"></script>
    <script src="~/lib/Adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script type="text/javascript" src="~/lib/assets/scripts/main.js"></script>
    <script type="text/javascript" src="~/lib/momentjs/moment.min.js"></script>
    <script type="text/javascript" src="~/lib/Adminlte/plugins/datatables/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script type="text/javascript" src="~/lib/Adminlte/dist/js/adminlte.min.js"></script>
    <script type="text/javascript" src="~/lib/Adminlte/dist/js/demo.js"></script>
    <script type="text/javascript" src="~/lib/Chosen/chosen.jquery.js"></script>
    <script type="text/javascript" src="~/lib/datetime-moment/datetime-moment.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>